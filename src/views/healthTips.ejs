<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Health AI Dashboard</title>

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

<style>
:root{
--primary:#2563eb;
--bg:#f4f8fc;
--card:#ffffff;
--text:#1e293b;
--muted:#64748b;
--border:#e2e8f0;
--success:#16a34a;
--warning:#f59e0b;
--danger:#dc2626;
}

*{
margin:0;
padding:0;
box-sizing:border-box;
font-family:'Inter',sans-serif;
}

body{
background:var(--bg);
display:flex;
justify-content:center;
align-items:center;
height:100vh;
color:var(--text);
}

/* ---------- CONTAINER ---------- */

.container{
width:900px;
background:var(--card);
border-radius:16px;
box-shadow:0 20px 60px rgba(0,0,0,0.08);
overflow:hidden;
display:flex;
}

/* ---------- LEFT PANEL (SCAN) ---------- */

.left{
width:40%;
padding:40px;
border-right:1px solid var(--border);
display:flex;
flex-direction:column;
justify-content:center;
align-items:center;
}

.scan-frame{
width:220px;
height:220px;
border:2px solid var(--primary);
border-radius:12px;
position:relative;
overflow:hidden;
margin-top:20px;
}

.scan-line{
position:absolute;
width:100%;
height:3px;
background:var(--primary);
animation:scan 2s linear infinite;
}

@keyframes scan{
0%{top:0;}
100%{top:100%;}
}

.progress{
margin-top:20px;
font-weight:600;
color:var(--primary);
}

/* ---------- RIGHT PANEL (DASHBOARD) ---------- */

.right{
width:60%;
padding:40px;
}

.header{
display:flex;
justify-content:space-between;
margin-bottom:30px;
}

.metrics{
display:grid;
grid-template-columns:1fr 1fr;
gap:20px;
}

.card{
border:1px solid var(--border);
border-radius:12px;
padding:20px;
transition:0.3s ease;
}

.card:hover{
box-shadow:0 10px 30px rgba(0,0,0,0.05);
transform:translateY(-2px);
}

.card h4{
font-size:14px;
color:var(--muted);
margin-bottom:8px;
}

.value{
font-size:22px;
font-weight:600;
}

.tip{
margin-top:30px;
padding:20px;
background:#f1f5f9;
border-radius:12px;
font-size:14px;
color:var(--text);
}

.badge{
display:inline-block;
padding:4px 10px;
border-radius:20px;
font-size:12px;
font-weight:500;
margin-top:6px;
}

.good{background:#dcfce7;color:var(--success);}
.medium{background:#fef3c7;color:var(--warning);}
.high{background:#fee2e2;color:var(--danger);}
</style>
</head>

<body>

<div class="container">

<div class="left">
<h2>AI Health Scan</h2>
<div class="scan-frame">
<div class="scan-line"></div>
</div>
<div class="progress" id="progressText">Analyzing... 0%</div>
</div>

<div class="right">

<div class="header">
<h2>Patient Overview</h2>
<small id="clock"></small>
</div>

<div class="metrics">

<div class="card">
<h4>Heart Rate</h4>
<div class="value" id="heartRate"></div>
<span class="badge" id="heartStatus"></span>
</div>

<div class="card">
<h4>Hydration</h4>
<div class="value" id="hydration"></div>
<span class="badge" id="hydrationStatus"></span>
</div>

<div class="card">
<h4>Sleep Quality</h4>
<div class="value" id="sleep"></div>
<span class="badge" id="sleepStatus"></span>
</div>

<div class="card">
<h4>Stress Level</h4>
<div class="value" id="stress"></div>
<span class="badge" id="stressStatus"></span>
</div>

</div>

<div class="tip" id="healthTip"></div>

</div>

</div>

<script>

let progress=0;

let scanInterval=setInterval(()=>{
progress++;
document.getElementById("progressText").innerText="Analyzing... "+progress+"%";

if(progress>=100){
clearInterval(scanInterval);
loadDashboard();
}
},25);

function loadDashboard(){

let heart=65+Math.floor(Math.random()*25);
let hydration=40+Math.floor(Math.random()*50);
let sleep=60+Math.floor(Math.random()*35);
let stress=20+Math.floor(Math.random()*60);

document.getElementById("heartRate").innerText=heart+" BPM";
document.getElementById("hydration").innerText=hydration+"%";
document.getElementById("sleep").innerText=sleep+"%";
document.getElementById("stress").innerText=stress+"%";

setStatus("heartStatus",heart,60,90);
setStatus("hydrationStatus",hydration,60,80);
setStatus("sleepStatus",sleep,70,85);
setStatus("stressStatus",stress,40,70);

generateTip(hydration,stress,sleep);

setInterval(()=>{
document.getElementById("clock").innerText=new Date().toLocaleString();
},1000);
}

function setStatus(id,value,low,high){
let el=document.getElementById(id);

if(value<low){
el.innerText="Low";
el.className="badge medium";
}
else if(value>high){
el.innerText="High";
el.className="badge high";
}
else{
el.innerText="Normal";
el.className="badge good";
}
}

function generateTip(h,s,sl){
let tip="";

if(h<60){
tip="Hydration level is slightly low. Encourage water intake within the next hour.";
}
else if(s>65){
tip="Stress indicators elevated. Recommend short breathing exercise or relaxation.";
}
else if(sl<70){
tip="Sleep quality below optimal. Suggest improved bedtime routine.";
}
else{
tip="All vital indicators are within normal range. Maintain current lifestyle habits.";
}

document.getElementById("healthTip").innerText=tip;
}

</script>

</body>
</html>
