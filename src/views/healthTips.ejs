<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>AI Biometric Health Scan</title>

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">

<style>

:root{
--primary:#2563eb;
--bg:#0f172a;
--card:#111827;
--text:#f1f5f9;
--muted:#94a3b8;
--success:#22c55e;
--danger:#ef4444;
}

*{
margin:0;
padding:0;
box-sizing:border-box;
font-family:'Inter',sans-serif;
}

body{
background:var(--bg);
color:var(--text);
display:flex;
justify-content:center;
align-items:center;
height:100vh;
}

.container{
width:95%;
max-width:1100px;
background:var(--card);
border-radius:20px;
overflow:hidden;
display:flex;
flex-wrap:wrap;
box-shadow:0 20px 60px rgba(0,0,0,0.5);
}

/* LEFT SIDE CAMERA */

.left{
flex:1;
min-width:300px;
padding:30px;
display:flex;
flex-direction:column;
align-items:center;
justify-content:center;
position:relative;
border-right:1px solid #1f2937;
}

.video-container{
position:relative;
width:100%;
max-width:400px;
aspect-ratio:1/1;
border-radius:20px;
overflow:hidden;
border:2px solid var(--primary);
}

video{
width:100%;
height:100%;
object-fit:cover;
}

.scan-overlay{
position:absolute;
width:100%;
height:100%;
pointer-events:none;
}

.face-box{
position:absolute;
top:20%;
left:20%;
width:60%;
height:60%;
border:2px solid var(--primary);
border-radius:12px;
box-shadow:0 0 20px var(--primary);
animation:pulse 2s infinite;
}

.scan-line{
position:absolute;
width:100%;
height:3px;
background:var(--primary);
animation:scan 2s linear infinite;
}

@keyframes scan{
0%{top:0;}
100%{top:100%;}
}

@keyframes pulse{
0%{box-shadow:0 0 10px var(--primary);}
50%{box-shadow:0 0 25px var(--primary);}
100%{box-shadow:0 0 10px var(--primary);}
}

.progress{
margin-top:20px;
font-weight:600;
color:var(--primary);
}

/* RIGHT SIDE DASHBOARD */

.right{
flex:1;
min-width:300px;
padding:40px;
}

.metrics{
display:grid;
grid-template-columns:repeat(auto-fit,minmax(150px,1fr));
gap:20px;
margin-top:20px;
}

.card{
background:#1e293b;
padding:20px;
border-radius:15px;
transition:0.3s;
}

.card:hover{
transform:translateY(-4px);
box-shadow:0 10px 25px rgba(0,0,0,0.3);
}

.card h4{
font-size:14px;
color:var(--muted);
}

.value{
font-size:22px;
font-weight:600;
margin-top:5px;
}

.tip{
margin-top:30px;
padding:15px;
background:#0f172a;
border-radius:12px;
font-size:14px;
color:var(--muted);
}

/* MOBILE */

@media(max-width:768px){
.container{
flex-direction:column;
}
.left{
border-right:none;
border-bottom:1px solid #1f2937;
}
}

button{
margin-top:20px;
padding:10px 20px;
border:none;
border-radius:8px;
background:var(--primary);
color:white;
cursor:pointer;
}

button:hover{
opacity:0.9;
}

</style>
</head>
<body>

<div class="container">

<div class="left">

<h2>Face Recognition</h2>

<div class="video-container">
<video id="video" autoplay playsinline></video>

<div class="scan-overlay">
<div class="face-box"></div>
<div class="scan-line"></div>
</div>
</div>

<button onclick="startCamera()">Start Scan</button>
<div class="progress" id="progressText"></div>

</div>

<div class="right">

<h2>Health Overview</h2>

<div class="metrics">

<div class="card">
<h4>Heart Rate</h4>
<div class="value" id="heartRate">--</div>
</div>

<div class="card">
<h4>Stress Level</h4>
<div class="value" id="stress">--</div>
</div>

<div class="card">
<h4>Hydration</h4>
<div class="value" id="hydration">--</div>
</div>

<div class="card">
<h4>Sleep Score</h4>
<div class="value" id="sleep">--</div>
</div>

</div>

<div class="tip" id="healthTip">
Waiting for scan...
</div>

</div>

</div>

<script>

let progress=0;

function startCamera(){
navigator.mediaDevices.getUserMedia({video:true})
.then(stream=>{
document.getElementById("video").srcObject=stream;
fakeScan();
})
.catch(()=>{
alert("Camera permission required for face scan.");
});
}

function fakeScan(){
progress=0;
let interval=setInterval(()=>{
progress+=2;
document.getElementById("progressText").innerText="Scanning Face... "+progress+"%";

if(progress>=100){
clearInterval(interval);
loadHealthData();
}
},40);
}

function loadHealthData(){

let heart=60+Math.floor(Math.random()*30);
let stress=20+Math.floor(Math.random()*60);
let hydration=50+Math.floor(Math.random()*40);
let sleep=65+Math.floor(Math.random()*30);

document.getElementById("heartRate").innerText=heart+" BPM";
document.getElementById("stress").innerText=stress+"%";
document.getElementById("hydration").innerText=hydration+"%";
document.getElementById("sleep").innerText=sleep+"%";

document.getElementById("healthTip").innerText=
"Scan complete. Vital signs generated using AI simulation.";

}

</script>

</body>
</html>
