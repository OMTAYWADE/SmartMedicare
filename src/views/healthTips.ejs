<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>SmartMedicare | Diagnostic Report</title>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

<style>
body{
margin:0;
font-family:'Inter',sans-serif;
background:#020617;
color:#e5e7eb;
padding:30px;
}

.container{
max-width:1200px;
margin:auto;
}

h2{
margin-bottom:5px;
}

.subtitle{
color:#94a3b8;
margin-bottom:20px;
}

.grid{
display:grid;
grid-template-columns:repeat(auto-fit,minmax(220px,1fr));
gap:18px;
}

.card{
background:#0f172a;
padding:18px;
border-radius:14px;
box-shadow:0 10px 25px rgba(0,0,0,.5);
transition:.3s;
}

.card:hover{
transform:translateY(-4px);
}

.card h4{
margin:0;
font-size:13px;
color:#94a3b8;
}

.value{
font-size:20px;
font-weight:700;
margin-top:6px;
}

.normal{color:#22c55e;}
.warning{color:#f59e0b;}
.danger{color:#ef4444;}

.analysis{
margin-top:30px;
background:#111827;
padding:25px;
border-radius:14px;
}

.tip{
color:#22c55e;
margin-top:10px;
font-weight:600;
}

.motivation{
margin-top:15px;
color:#94a3b8;
font-style:italic;
}

@media(max-width:600px){
body{padding:15px;}
}
</style>
</head>
<body>

<div class="container">

<h2 id="title"></h2>
<div class="subtitle">Comprehensive AI Medical Diagnostic Report</div>

<div class="grid" id="reportGrid"></div>

<div class="analysis">
<h3>AI Health Analysis</h3>
<div id="healthTip" class="tip"></div>
<div id="motivation" class="motivation"></div>
</div>

</div>

<script>

const name = localStorage.getItem("currentUser") || "Patient";
document.getElementById("title").innerText = "Diagnostic Report - " + name;

/* 25 Test Parameters */

function rand(min,max){return Math.floor(Math.random()*(max-min+1))+min;}

const tests = {
"Heart Rate (BPM)": rand(55,110),
"Blood Pressure Systolic": rand(100,160),
"Blood Pressure Diastolic": rand(65,100),
"Blood Sugar (mg/dL)": rand(70,190),
"Oxygen Saturation (%)": rand(90,100),
"Cholesterol (mg/dL)": rand(140,280),
"Triglycerides": rand(100,300),
"Body Temperature (Â°C)": (36+Math.random()*2).toFixed(1),
"Respiratory Rate": rand(12,24),
"Stress Index (%)": rand(20,95),
"Sleep Score (%)": rand(55,100),
"BMI": (18+Math.random()*12).toFixed(1),
"Vitamin D Level": rand(15,60),
"Hemoglobin": rand(10,17),
"Platelet Count": rand(150000,450000),
"WBC Count": rand(4000,11000),
"Liver Enzyme ALT": rand(10,80),
"Kidney Creatinine": (0.6+Math.random()*1.8).toFixed(2),
"Uric Acid": rand(3,9),
"Sodium Level": rand(130,150),
"Potassium Level": rand(3,6),
"Calcium Level": rand(8,11),
"Magnesium": rand(1,3),
"LDL Cholesterol": rand(70,190),
"HDL Cholesterol": rand(30,70)
};

const grid=document.getElementById("reportGrid");

let riskFlags=[];

for(let key in tests){

let value=tests[key];
let status="normal";

if(key.includes("Sugar") && value>140){status="danger"; riskFlags.push("High Blood Sugar");}
if(key.includes("Stress") && value>80){status="danger"; riskFlags.push("High Stress");}
if(key.includes("Sleep") && value<65){status="warning"; riskFlags.push("Poor Sleep Quality");}
if(key.includes("Cholesterol") && value>240){status="danger"; riskFlags.push("High Cholesterol");}
if(key.includes("BMI") && value>30){status="danger"; riskFlags.push("Obesity Risk");}

let div=document.createElement("div");
div.className="card";
div.innerHTML=`
<h4>${key}</h4>
<div class="value ${status}">${value}</div>
`;
grid.appendChild(div);
}

/* Intelligent Health Advice */

let tip="All major health indicators are within acceptable medical range. Continue maintaining your current lifestyle.";

if(riskFlags.includes("High Blood Sugar")){
tip="Elevated blood sugar detected. Reduce refined sugar intake and increase daily physical activity.";
}
else if(riskFlags.includes("High Stress")){
tip="Stress levels are critically high. Incorporate meditation and breathing exercises immediately.";
}
else if(riskFlags.includes("Poor Sleep Quality")){
tip="Sleep quality is below optimal. Maintain consistent sleep schedule and reduce screen exposure at night.";
}
else if(riskFlags.includes("High Cholesterol")){
tip="Cholesterol levels elevated. Adopt low-fat diet and regular cardiovascular exercise.";
}
else if(riskFlags.includes("Obesity Risk")){
tip="BMI indicates obesity risk. Focus on calorie control and structured exercise program.";
}

document.getElementById("healthTip").innerText = tip;

/* Dynamic Motivation Lines */

const motivations=[
"Health is the foundation of productivity and happiness.",
"Consistency in small habits leads to lifelong wellness.",
"Prevention today ensures strength tomorrow.",
"Your body responds to discipline and care.",
"Strong habits build strong immunity.",
"Every healthy choice compounds over time.",
"Invest in health before illness demands it."
];

document.getElementById("motivation").innerText =
motivations[Math.floor(Math.random()*motivations.length)];

</script>

</body>
</html>
