<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>AI Biometric Health Scan</title>

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">

<style>

:root{
--primary:#2563eb;
--success:#22c55e;
--danger:#ef4444;
--bg:#0f172a;
--card:#111827;
--text:#f1f5f9;
--muted:#94a3b8;
}

*{
margin:0;
padding:0;
box-sizing:border-box;
font-family:'Inter',sans-serif;
}

body{
background:var(--bg);
color:var(--text);
display:flex;
justify-content:center;
align-items:center;
min-height:100vh;
padding:20px;
overflow:hidden;
}

/* Glow Background */

body::before,
body::after{
content:"";
position:fixed;
width:500px;
height:500px;
border-radius:50%;
filter:blur(140px);
opacity:.2;
z-index:-1;
animation:float 12s infinite alternate ease-in-out;
}

body::before{
background:#22c55e;
top:-150px;
left:-150px;
}

body::after{
background:#2563eb;
bottom:-150px;
right:-150px;
animation-delay:4s;
}

@keyframes float{
from{transform:translateY(0);}
to{transform:translateY(80px);}
}

.container{
width:100%;
max-width:1100px;
background:var(--card);
border-radius:20px;
display:flex;
flex-wrap:wrap;
box-shadow:0 25px 70px rgba(0,0,0,.6);
overflow:hidden;
}

/* LEFT */

.left{
flex:1;
min-width:300px;
padding:30px;
display:flex;
flex-direction:column;
align-items:center;
justify-content:center;
border-right:1px solid #1f2937;
}

.video-container{
position:relative;
width:100%;
max-width:380px;
aspect-ratio:1/1;
border-radius:20px;
overflow:hidden;
border:2px solid var(--primary);
}

video{
width:100%;
height:100%;
object-fit:cover;
}

.scan-overlay{
position:absolute;
width:100%;
height:100%;
pointer-events:none;
}

.scan-line{
position:absolute;
width:100%;
height:3px;
background:var(--primary);
animation:scan 2s linear infinite;
}

@keyframes scan{
0%{top:0;}
100%{top:100%;}
}

.face-box{
position:absolute;
top:20%;
left:20%;
width:60%;
height:60%;
border:2px solid var(--primary);
border-radius:12px;
box-shadow:0 0 20px var(--primary);
animation:pulse 2s infinite;
}

@keyframes pulse{
0%{box-shadow:0 0 10px var(--primary);}
50%{box-shadow:0 0 25px var(--primary);}
100%{box-shadow:0 0 10px var(--primary);}
}

input{
margin-top:15px;
padding:10px;
width:100%;
max-width:250px;
border-radius:8px;
border:none;
outline:none;
}

button{
margin-top:15px;
padding:10px 20px;
border:none;
border-radius:8px;
background:var(--primary);
color:white;
cursor:pointer;
font-weight:600;
}

.progress{
margin-top:15px;
font-weight:600;
color:var(--primary);
}

.welcome-msg{
margin-top:15px;
font-weight:700;
color:var(--success);
}

/* RIGHT */

.right{
flex:1;
min-width:300px;
padding:40px;
}

.metrics{
display:grid;
grid-template-columns:repeat(auto-fit,minmax(150px,1fr));
gap:20px;
margin-top:20px;
}

.card{
background:#1e293b;
padding:20px;
border-radius:15px;
transition:.3s;
}

.card:hover{
transform:translateY(-5px);
box-shadow:0 10px 25px rgba(0,0,0,.4);
}

.value{
font-size:22px;
font-weight:600;
margin-top:5px;
}

.tip{
margin-top:25px;
padding:15px;
background:#0f172a;
border-radius:12px;
color:var(--muted);
}

@media(max-width:768px){
.container{
flex-direction:column;
}
.left{
border-right:none;
border-bottom:1px solid #1f2937;
}
}

</style>
</head>
<body>

<div class="container">

<div class="left">

<h2>AI Face Recognition</h2>

<div class="video-container">
<video id="video" autoplay playsinline></video>
<div class="scan-overlay">
<div class="face-box"></div>
<div class="scan-line"></div>
</div>
</div>

<input type="text" id="patientId" placeholder="Enter Patient ID">

<button onclick="startScan()">Start Scan</button>

<div class="progress" id="progressText"></div>
<div class="welcome-msg" id="welcomeText"></div>

</div>

<div class="right">

<h2>Health Overview</h2>

<div class="metrics">
<div class="card">
Heart Rate
<div class="value" id="heartRate">--</div>
</div>

<div class="card">
Stress
<div class="value" id="stress">--</div>
</div>

<div class="card">
Hydration
<div class="value" id="hydration">--</div>
</div>

<div class="card">
Sleep
<div class="value" id="sleep">--</div>
</div>
</div>

<div class="tip" id="healthTip">
Waiting for scan...
</div>

</div>

</div>

<script>

/* Patient Database */

const patients = [
{ id:"P101", name:"Aarav Sharma", role:"patient" },
{ id:"P102", name:"Priya Verma", role:"patient" },
{ id:"P103", name:"Rahul Mehta", role:"patient" },
{ id:"P104", name:"Sneha Patel", role:"patient" }
];

let streamRef;

function startScan(){

let id = document.getElementById("patientId").value.trim();
let user = patients.find(p=>p.id===id);

if(!user){
document.getElementById("welcomeText").innerText="Patient Not Found ❌";
document.getElementById("welcomeText").style.color="var(--danger)";
return;
}

navigator.mediaDevices.getUserMedia({video:true})
.then(stream=>{
streamRef=stream;
document.getElementById("video").srcObject=stream;
fakeScan(user);
})
.catch(()=>{
alert("Camera permission required.");
});
}

function fakeScan(user){

let progress=0;
let interval=setInterval(()=>{
progress+=2;
document.getElementById("progressText").innerText="Scanning "+progress+"%";

if(progress>=100){
clearInterval(interval);
finishScan(user);
}
},40);
}

function finishScan(user){

if(streamRef){
streamRef.getTracks().forEach(track=>track.stop());
}

document.getElementById("welcomeText").innerText="Welcome, "+user.name+" ✔";
document.getElementById("welcomeText").style.color="var(--success)";

/* Save user for dashboard */
localStorage.setItem("smartUser",JSON.stringify(user));

generateHealthData();

setTimeout(()=>{
window.location.href="dashboard.html";
},2000);
}

function generateHealthData(){

let heart=60+Math.floor(Math.random()*30);
let stress=20+Math.floor(Math.random()*60);
let hydration=50+Math.floor(Math.random()*40);
let sleep=65+Math.floor(Math.random()*30);

document.getElementById("heartRate").innerText=heart+" BPM";
document.getElementById("stress").innerText=stress+"%";
document.getElementById("hydration").innerText=hydration+"%";
document.getElementById("sleep").innerText=sleep+"%";

document.getElementById("healthTip").innerText=
"AI analysis complete. All systems stable. Maintain hydration and healthy sleep routine.";
}

</script>

</body>
</html>
