<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Smart Health AI</title>

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background: linear-gradient(135deg, #4f46e5, #9333ea);
            overflow: hidden;
            color: white;
        }

        /* ---------- COMMON CARD ---------- */

        .glass {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(20px);
            padding: 30px;
            border-radius: 20px;
            width: 380px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            transition: 0.4s ease;
        }

        /* ---------- SCAN SCREEN ---------- */

        #scanScreen {
            text-align: center;
        }

        .scan-box {
            width: 220px;
            height: 220px;
            margin: 25px auto;
            position: relative;
        }

        .corner {
            position: absolute;
            width: 40px;
            height: 40px;
            border: 3px solid #fff;
        }

        .top-left {
            top: 0;
            left: 0;
            border-right: none;
            border-bottom: none;
        }

        .top-right {
            top: 0;
            right: 0;
            border-left: none;
            border-bottom: none;
        }

        .bottom-left {
            bottom: 0;
            left: 0;
            border-right: none;
            border-top: none;
        }

        .bottom-right {
            bottom: 0;
            right: 0;
            border-left: none;
            border-top: none;
        }

        .scan-line {
            position: absolute;
            width: 100%;
            height: 3px;
            background: white;
            animation: scanMove 2s linear infinite;
        }

        @keyframes scanMove {
            0% {
                top: 0;
            }

            100% {
                top: 100%;
            }
        }

        .progress {
            margin-top: 15px;
            font-weight: 600;
        }

        /* ---------- DASHBOARD ---------- */

        #dashboard {
            display: none;
        }

        .header {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .cards {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
        }

        .metric {
            background: rgba(255, 255, 255, 0.15);
            padding: 15px;
            border-radius: 15px;
            text-align: center;
            transition: 0.3s ease;
        }

        .metric:hover {
            transform: translateY(-5px);
            background: rgba(255, 255, 255, 0.25);
        }

        .circle {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            margin: 0 auto 8px;
            background: conic-gradient(#fff 0deg, rgba(255, 255, 255, 0.2) 0deg);
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 14px;
            font-weight: 600;
        }

        .tip {
            margin-top: 20px;
            padding: 15px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 15px;
            font-size: 14px;
            text-align: center;
            animation: fadeTip 1s ease;
        }

        @keyframes fadeTip {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>

<body>

    <!-- SCAN SCREEN -->
    <div id="scanScreen" class="glass">
        <h2>AI Facial Health Scan</h2>

        <div class="scan-box">
            <div class="corner top-left"></div>
            <div class="corner top-right"></div>
            <div class="corner bottom-left"></div>
            <div class="corner bottom-right"></div>
            <div class="scan-line"></div>
        </div>

        <div class="progress" id="progressText">Analyzing... 0%</div>
        <p style="font-size:13px;opacity:0.8;margin-top:8px;">
            Please stay still during scan
        </p>
    </div>

    <!-- DASHBOARD -->
    <div id="dashboard" class="glass">

        <div class="header">
            <h3>Health Overview</h3>
            <small id="clock"></small>
        </div>

        <div class="cards">

            <div class="metric">
                <div class="circle" id="heartCircle">0%</div>
                <div>‚ù§Ô∏è Heart</div>
            </div>

            <div class="metric">
                <div class="circle" id="waterCircle">0%</div>
                <div>üíß Hydration</div>
            </div>

            <div class="metric">
                <div class="circle" id="sleepCircle">0%</div>
                <div>üò¥ Sleep</div>
            </div>

            <div class="metric">
                <div class="circle" id="stressCircle">0%</div>
                <div>üß† Stress</div>
            </div>

        </div>

        <div class="tip" id="healthTip"></div>

    </div>

    <script>

        // ---------- SCAN ANIMATION ----------
        let progress = 0;
        let interval = setInterval(() => {
            progress++;
            document.getElementById("progressText").innerText = "Analyzing... " + progress + "%";

            if (progress >= 100) {
                clearInterval(interval);
                document.getElementById("scanScreen").style.display = "none";
                document.getElementById("dashboard").style.display = "block";
                loadDashboard();
            }
        }, 25);

        // ---------- DASHBOARD ----------
        function setCircle(id, value) {
            let circle = document.getElementById(id);
            let degree = value * 3.6;
            circle.style.background = `conic-gradient(#fff ${degree}deg, rgba(255,255,255,0.2) ${degree}deg)`;
            circle.innerText = value + "%";
        }

        function loadDashboard() {

            let heart = 70 + Math.floor(Math.random() * 20);
            let hydration = 40 + Math.floor(Math.random() * 50);
            let sleep = 60 + Math.floor(Math.random() * 30);
            let stress = 20 + Math.floor(Math.random() * 60);

            setCircle("heartCircle", heart);
            setCircle("waterCircle", hydration);
            setCircle("sleepCircle", sleep);
            setCircle("stressCircle", stress);

            updateTip(hydration, stress, sleep);

            setInterval(() => {
                document.getElementById("clock").innerText = new Date().toLocaleTimeString();
            }, 1000);

            setInterval(() => {
                updateTip(hydration, stress, sleep);
            }, 8000);
        }

        function updateTip(h, s, sl) {

            let tip = "";
            if (h < 60) {
                tip = "üíß Your hydration is slightly low. Drink water now.";
            }
            else if (s > 65) {
                tip = "üßò High stress detected. Take a short breathing break.";
            }
            else if (sl < 70) {
                tip = "üåô Improve sleep quality by reducing screen time.";
            }
            else {
                tip = "‚úÖ All health indicators are stable. Keep maintaining!";
            }

            document.getElementById("healthTip").innerText = tip;
        }

    </script>

</body>

</html>