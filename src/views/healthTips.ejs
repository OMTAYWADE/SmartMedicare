/* Animated blobs */
.blob{
position:absolute;
width:400px;
height:400px;
filter:blur(120px);
opacity:.5;
animation:float 12s infinite ease-in-out;
z-index:0;
}
.blob.blue{background:#3b82f6;top:10%;left:10%;}
.blob.purple{background:#8b5cf6;bottom:10%;right:10%;animation-delay:4s;}

@keyframes float{
0%,100%{transform:translate(0,0);}
50%{transform:translate(50px,-50px);}
}

/* Navbar */
nav{
background:rgba(15,23,42,.8);
backdrop-filter:blur(12px);
}
.brand-logo{font-weight:600;}

/* Hero */
.hero{
min-height:40vh;
display:flex;
flex-direction:column;
justify-content:center;
align-items:center;
text-align:center;
position:relative;
z-index:2;
}

.hero h3{
font-weight:800;
font-size:2.8rem;
background:linear-gradient(90deg,#34d399,#60a5fa);
-webkit-background-clip:text;
-webkit-text-fill-color:transparent;
}

/* Stats Section */
.stats{
display:flex;
justify-content:center;
gap:40px;
margin-top:20px;
flex-wrap:wrap;
}
.stat-box{
text-align:center;
}
.stat-number{
font-size:28px;
font-weight:700;
color:#34d399;
}

/* Search */
.search-box{
margin:30px 0;
}

/* Glass Card */
.glass-card{
background:rgba(255,255,255,.08);
backdrop-filter:blur(18px);
border-radius:20px;
border:1px solid rgba(255,255,255,.15);
transition:.4s ease;
}

.tip-card:hover{
transform:translateY(-8px) scale(1.03);
box-shadow:0 0 60px rgba(52,211,153,.4);
}

/* Favorite Button */
.favorite{
cursor:pointer;
transition:.3s;
}
.favorite.active{
color:#facc15;
}

/* Footer */
footer{
margin-top:120px;
padding:40px 0;
background:rgba(15,23,42,.8);
text-align:center;
}
</style>
</head>

