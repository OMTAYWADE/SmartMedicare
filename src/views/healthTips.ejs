<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Smart Health AI</title>

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">

<style>
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: 'Inter', sans-serif;
}

body {
  background: linear-gradient(135deg, #eaf4ff, #f7fbff);
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #1e293b;
}

/* ---------- SCAN SCREEN ---------- */

#scanScreen {
  width: 350px;
  text-align: center;
}

.scan-card {
  background: white;
  padding: 30px;
  border-radius: 18px;
  box-shadow: 0 15px 40px rgba(0,0,0,0.08);
}

.scan-box {
  margin: 25px auto;
  width: 220px;
  height: 220px;
  border: 2px solid #3b82f6;
  border-radius: 16px;
  position: relative;
  overflow: hidden;
}

.scan-line {
  width: 100%;
  height: 3px;
  background: #3b82f6;
  position: absolute;
  top: 0;
  animation: scanMove 2s linear infinite;
}

@keyframes scanMove {
  0% { top: 0; }
  100% { top: 100%; }
}

.progress {
  margin-top: 10px;
  font-weight: 600;
  color: #3b82f6;
}

/* ---------- DASHBOARD ---------- */

#dashboard {
  display: none;
  width: 400px;
}

.dashboard-card {
  background: white;
  padding: 25px;
  border-radius: 18px;
  box-shadow: 0 15px 40px rgba(0,0,0,0.08);
}

.header {
  margin-bottom: 20px;
}

.cards {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 15px;
}

.metric {
  padding: 15px;
  border-radius: 14px;
  background: #f1f7ff;
  transition: 0.3s ease;
}

.metric:hover {
  transform: translateY(-3px);
}

.metric h4 {
  font-size: 14px;
  margin-bottom: 5px;
}

.metric p {
  font-size: 18px;
  font-weight: 600;
}

.tip {
  margin-top: 20px;
  padding: 15px;
  border-radius: 14px;
  background: #e0f2fe;
  font-size: 14px;
}
</style>
</head>

<body>

<!-- SCAN SCREEN -->
<div id="scanScreen">
  <div class="scan-card">
    <h2>AI Health Scan</h2>
    <div class="scan-box">
      <div class="scan-line"></div>
    </div>
    <div class="progress" id="progressText">Scanning... 0%</div>
    <p style="font-size:13px;color:#64748b;margin-top:8px;">
      Please keep your face inside the frame
    </p>
  </div>
</div>

<!-- DASHBOARD -->
<div id="dashboard">
  <div class="dashboard-card">
    <div class="header">
      <h2>Health Dashboard</h2>
      <small id="currentTime"></small>
    </div>

    <div class="cards">
      <div class="metric">
        <h4>‚ù§Ô∏è Heart Rate</h4>
        <p id="heartRate"></p>
      </div>

      <div class="metric">
        <h4>üíß Hydration</h4>
        <p id="hydration"></p>
      </div>

      <div class="metric">
        <h4>üò¥ Sleep Quality</h4>
        <p id="sleep"></p>
      </div>

      <div class="metric">
        <h4>üß† Stress Level</h4>
        <p id="stress"></p>
      </div>
    </div>

    <div class="tip" id="healthTip"></div>
  </div>
</div>

<script>
let progress = 0;
let progressText = document.getElementById("progressText");

let scanInterval = setInterval(() => {
  progress++;
  progressText.innerText = "Scanning... " + progress + "%";

  if (progress >= 100) {
    clearInterval(scanInterval);
    document.getElementById("scanScreen").style.display = "none";
    document.getElementById("dashboard").style.display = "block";
    loadDashboard();
  }
}, 30);

// DASHBOARD DATA
function loadDashboard() {

  let heartRate = 72 + Math.floor(Math.random() * 10);
  let hydration = 40 + Math.floor(Math.random() * 50);
  let sleep = 60 + Math.floor(Math.random() * 30);
  let stress = 20 + Math.floor(Math.random() * 60);

  document.getElementById("heartRate").innerText = heartRate + " BPM";
  document.getElementById("hydration").innerText = hydration + "%";
  document.getElementById("sleep").innerText = sleep + "%";
  document.getElementById("stress").innerText = stress + "%";

  document.getElementById("currentTime").innerText =
    new Date().toLocaleString();

  let tip = "";

  if (hydration < 60) {
    tip = "üíß Drink 1-2 glasses of water within the next hour.";
  } else if (stress > 65) {
    tip = "üßò Take a 5 minute breathing break to reduce stress.";
  } else if (sleep < 70) {
    tip = "üåô Avoid screens 1 hour before bedtime for better sleep.";
  } else {
    tip = "‚úÖ Your health indicators look stable today. Keep it up!";
  }

  document.getElementById("healthTip").innerText = tip;
}
</script>

</body>
</html>
