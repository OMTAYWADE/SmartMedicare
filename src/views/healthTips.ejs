<script>
let scanDuration = 10;

const patients = [
"Bhavika Taywade",
"Rohan Sharma",
"Anita Deshmukh",
"Arjun Patil"
];

let selectedPatient = patients[Math.floor(Math.random() * patients.length)];

setTimeout(()=>{
document.getElementById("scanText").innerText = "Identity Verified";
document.getElementById("identityName").innerText = "Welcome " + selectedPatient;
document.getElementById("identityName").style.opacity = "1";
}, scanDuration * 500);

setTimeout(()=>{
document.getElementById("faceOverlay").style.opacity="0";

setTimeout(()=>{
document.getElementById("faceOverlay").style.display="none";
document.getElementById("mainContent").style.display="block";
},1000);

}, scanDuration * 1000);
</script>

</body>
</html>
