<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Login | SmartMedicare</title>

<link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

<style>

*{
margin:0;
padding:0;
box-sizing:border-box;
}

body{
font-family:'Poppins',sans-serif;
min-height:100vh;
display:flex;
align-items:center;
justify-content:center;
background-size:cover;
background-position:center;
background-repeat:no-repeat;
overflow:hidden;
}

/* Dark overlay */
body::before{
content:"";
position:fixed;
inset:0;
background:linear-gradient(rgba(0,0,0,.55),rgba(0,0,0,.75));
z-index:-1;
}

/* Animated floating gradient */
body::after{
content:"";
position:absolute;
width:600px;
height:600px;
background:radial-gradient(circle,#42a5f580,transparent 70%);
filter:blur(120px);
animation:float 8s ease-in-out infinite alternate;
z-index:-1;
}

@keyframes float{
from{transform:translate(-150px,-150px);}
to{transform:translate(150px,150px);}
}

/* Card */
.login-card{
backdrop-filter:blur(18px);
background:rgba(255,255,255,.12);
border-radius:20px;
padding:10px;
box-shadow:0 30px 60px rgba(0,0,0,.5);
animation:fadeInUp 1s ease forwards;
opacity:0;
transform:translateY(40px);
transition:.4s;
}

.login-card:hover{
transform:translateY(-8px);
box-shadow:0 40px 70px rgba(0,0,0,.6);
}

@keyframes fadeInUp{
to{
opacity:1;
transform:translateY(0);
}
}

.card-title{
color:#fff;
font-weight:600;
letter-spacing:1px;
margin-bottom:20px;
}

/* Inputs */
.input-field input{
color:#fff;
}

.input-field label{
color:#ddd;
}

.input-field input:focus + label{
color:#42a5f5 !important;
}

.input-field input:focus{
border-bottom:1px solid #42a5f5 !important;
box-shadow:0 1px 0 0 #42a5f5 !important;
}

/* Button */
.login-btn{
width:100%;
border-radius:30px;
background:linear-gradient(135deg,#42a5f5,#478ed1);
font-weight:500;
letter-spacing:1px;
transition:.4s;
box-shadow:0 10px 25px rgba(66,165,245,.6);
animation:pulse 3s infinite;
}

.login-btn:hover{
transform:translateY(-4px);
box-shadow:0 20px 40px rgba(66,165,245,.8);
}

@keyframes pulse{
0%{box-shadow:0 0 0 0 rgba(66,165,245,.6);}
70%{box-shadow:0 0 0 20px rgba(66,165,245,0);}
100%{box-shadow:0 0 0 0 rgba(66,165,245,0);}
}

/* Return link */
.return{
color:#fff;
text-decoration:none;
display:inline-block;
margin-bottom:15px;
transition:.3s;
}

.return:hover{
color:#42a5f5;
transform:translateX(-5px);
}

/* Footer */
.card-action{
border-top:1px solid rgba(255,255,255,.2);
}

.card-action a{
color:#42a5f5;
font-weight:500;
}

.red-text{
font-weight:500;
}

/* Mobile */
@media(max-width:600px){
.login-card{
margin:15px;
padding:20px 10px;
}
}

</style>
</head>

<body>

<div class="container">
<div class="row">
<div class="col s12 m6 offset-m3">

<div class="card login-card">

<div class="card-content">

<a class="return" href="/">← Home</a>

<span class="card-title center-align">Welcome Back</span>

<% if (message && message.length) { %>
<p class="red-text center-align"><%= message %></p>
<% } %>

<form action="/login" method="POST">

<div class="input-field">
<input id="email" type="email" name="email" required>
<label for="email">Email</label>
</div>

<div class="input-field">
<input id="password" type="password" name="password" required>
<label for="password">Password</label>
</div>

<button type="submit" class="btn btn-large login-btn">
Login
</button>

</form>

</div>

<div class="card-action center-align">
<p style="color:#eee">
Don’t have an account?
<a href="/signup">Sign Up</a>
</p>
</div>

</div>
</div>
</div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

<script>
document.addEventListener('DOMContentLoaded', () => {
M.updateTextFields();

const images = [
"https://wallpapercave.com/wp/wp6057120.jpg",
"https://wallpapercave.com/wp/wp5574437.jpg",
"https://wallpapercave.com/wp/wp14981590.webp"
];

const randomImage = images[Math.floor(Math.random() * images.length)];
document.body.style.backgroundImage = `url(${randomImage})`;
});
</script>

</body>
</html>
