<style>

body{
font-family:'Inter',sans-serif;
background:#020617;
color:#e5e7eb;
margin:0;
overflow-x:hidden;
}

/* ===== Floating Glow Background ===== */

body::before,
body::after{
content:"";
position:fixed;
width:600px;
height:600px;
border-radius:50%;
filter:blur(150px);
opacity:.25;
z-index:-1;
animation:float 14s infinite alternate ease-in-out;
}

body::before{
background:#22c55e;
top:-150px;
left:-150px;
}

body::after{
background:#2563eb;
bottom:-150px;
right:-150px;
animation-delay:5s;
}

@keyframes float{
from{transform:translateY(0);}
to{transform:translateY(100px);}
}

/* ===== Navbar ===== */

nav{
background:rgba(2,6,23,.85);
backdrop-filter:blur(12px);
position:sticky;
top:0;
z-index:100;
}

/* ===== Welcome Animation ===== */

.welcome-animate{
opacity:0;
transform:translateY(20px);
animation:fadeWelcome .8s ease forwards;
}

@keyframes fadeWelcome{
to{
opacity:1;
transform:translateY(0);
}
}

/* ===== Role Badge ===== */

.role-badge{
padding:6px 14px;
border-radius:20px;
font-size:13px;
font-weight:600;
margin-left:10px;
}

.role-badge.patient{
background:linear-gradient(135deg,#22c55e,#16a34a);
color:#022c22;
}

.role-badge.doctor{
background:linear-gradient(135deg,#2563eb,#1d4ed8);
color:white;
}

/* ===== Cards ===== */

.dash-card{
background:rgba(255,255,255,.06);
backdrop-filter:blur(16px);
border-radius:18px;
border:1px solid rgba(255,255,255,.08);
box-shadow:0 20px 50px rgba(0,0,0,.4);
transition:.4s;
animation:fadeUp .7s ease forwards;
opacity:0;
transform:translateY(25px);
}

.dash-card:hover{
transform:translateY(-10px) scale(1.03);
box-shadow:0 35px 80px rgba(0,0,0,.6);
border:1px solid rgba(34,197,94,.4);
}

@keyframes fadeUp{
to{opacity:1;transform:translateY(0);}
}

.action-icon{
font-size:56px;
margin-bottom:12px;
transition:.3s;
}

.dash-card.center-align:hover .action-icon{
transform:scale(1.2) rotate(-5deg);
}

/* ===== Stats Section ===== */

.stats{
display:flex;
gap:40px;
flex-wrap:wrap;
margin:20px 0;
}

.stat{
text-align:center;
}

.stat-number{
font-size:28px;
font-weight:700;
color:#22c55e;
}

/* ===== AI Pulse ===== */

.pulse{
display:inline-block;
width:10px;
height:10px;
background:#22c55e;
border-radius:50%;
margin-left:8px;
animation:pulse 1.5s infinite;
}

@keyframes pulse{
0%{box-shadow:0 0 0 0 rgba(34,197,94,.7);}
70%{box-shadow:0 0 0 15px rgba(34,197,94,0);}
100%{box-shadow:0 0 0 0 rgba(34,197,94,0);}
}

/* ===== Footer ===== */

footer{
background:rgba(0,0,0,.5);
backdrop-filter:blur(10px);
border-top:1px solid rgba(255,255,255,.05);
margin-top:40px;
padding:20px 0;
}

/* ===== Responsive Fix ===== */

@media(max-width:600px){
.stats{
flex-direction:column;
gap:20px;
}
.stat-number{
font-size:24px;
}
h4{
font-size:20px;
}
}

</style>
</head>

