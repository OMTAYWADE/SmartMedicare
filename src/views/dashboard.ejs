<script>

/* ===== INIT ===== */

document.addEventListener("DOMContentLoaded",()=>{

M.Sidenav.init(document.querySelectorAll(".sidenav"));

document.querySelectorAll(".dash-card").forEach((card,i)=>{
card.style.animationDelay=(i*0.12)+"s";
});

/* ===== LOAD USER ===== */

let user = JSON.parse(localStorage.getItem("smartUser"));

let welcomeText = document.getElementById("welcomeText");
let roleBadge = document.getElementById("roleBadge");

if(!user){
welcomeText.innerText="Welcome, Guest";
roleBadge.style.display="none";
return;
}

welcomeText.innerHTML = `Welcome, ${user.name}`;
roleBadge.innerText = user.role.toUpperCase();
roleBadge.classList.add(user.role);

});

/* ===== LOGOUT ===== */

function logout(){
localStorage.removeItem("smartUser");
window.location.href="face-scan.html";
}

