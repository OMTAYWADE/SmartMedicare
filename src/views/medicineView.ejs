<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Medicine Panel</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

<style>
*{
font-family:'Poppins',sans-serif;
box-sizing:border-box;
margin:0;
padding:0;
}

body{
background:linear-gradient(135deg,#0f2027,#203a43,#2c5364);
min-height:100vh;
color:white;
overflow-x:hidden;
}

/* Floating Glow */
body::after{
content:"";
position:fixed;
width:600px;
height:600px;
background:radial-gradient(circle,#00f2fe55,transparent 70%);
filter:blur(120px);
animation:float 10s infinite alternate ease-in-out;
z-index:-1;
}

@keyframes float{
from{transform:translate(-150px,-150px);}
to{transform:translate(150px,150px);}
}

.container{
max-width:1100px;
margin:auto;
padding:40px 20px;
}

.glass{
background:rgba(255,255,255,.08);
backdrop-filter:blur(18px);
border-radius:20px;
padding:30px;
box-shadow:0 0 50px rgba(0,255,255,.15);
animation:fadeIn 1s ease;
}

h2{
text-align:center;
margin-bottom:20px;
}

/* Search */
.search-box{
margin:20px 0;
}

.search-box input{
width:100%;
padding:10px;
border-radius:8px;
border:1px solid rgba(0,255,255,.4);
background:transparent;
color:white;
}

/* Table */
.table-wrapper{
overflow-x:auto;
}

table{
width:100%;
border-collapse:collapse;
margin-top:15px;
min-width:700px;
}

th,td{
padding:12px;
text-align:center;
}

th{
background:rgba(0,255,255,.15);
position:sticky;
top:0;
}

tr{
transition:.3s;
}

tr:hover{
background:rgba(0,255,255,.08);
transform:scale(1.01);
}

/* Status Badge */
.status{
padding:4px 10px;
border-radius:20px;
font-size:12px;
font-weight:bold;
}

.status.low{background:#ff4b2b;}
.status.medium{background:#facc15;color:black;}
.status.good{background:#22c55e;}

/* Inputs */
input{
background:transparent;
border:1px solid rgba(0,255,255,.4);
color:white;
padding:6px;
border-radius:6px;
text-align:center;
width:100%;
}

input:focus{
outline:none;
box-shadow:0 0 10px cyan;
}

/* Buttons */
.btn{
padding:6px 12px;
border-radius:20px;
border:none;
cursor:pointer;
transition:.3s;
font-weight:bold;
}

.btn-update{background:linear-gradient(45deg,#00f2fe,#4facfe);}
.btn-delete{background:linear-gradient(45deg,#ff416c,#ff4b2b);}
.btn-add{background:linear-gradient(45deg,#00ffcc,#00cc99);margin-top:20px;}

.btn:hover{
box-shadow:0 0 20px rgba(0,255,255,.7);
transform:scale(1.05);
}

/* Add Form */
.add-form{
margin-top:30px;
overflow:hidden;
max-height:0;
transition:.6s ease;
}

.add-form.active{
max-height:600px;
}

.form-grid{
display:grid;
grid-template-columns:repeat(auto-fit,minmax(200px,1fr));
gap:15px;
}

@keyframes fadeIn{
from{opacity:0;transform:translateY(30px);}
to{opacity:1;transform:translateY(0);}
}

/* Mobile */
@media(max-width:768px){
table{
font-size:12px;
}
}
</style>
</head>

<body>

<div class="container">
<div class="glass">

<h2>ðŸ’Š Medicines for <%= patient.name %></h2>

<div class="search-box">
<input type="text" id="searchInput" placeholder="Search medicine..." onkeyup="filterMedicines()">
</div>

<div class="table-wrapper">
<table id="medicineTable">
<tr>
<th>Name</th>
<th>Remaining</th>
<th>Status</th>
<th>Frequency</th>
<th>Reason</th>
<th>Actions</th>
</tr>

<% medicines.forEach(med => { 
let statusClass = med.dosesRemaining <= 5 ? "low" :
                  med.dosesRemaining <= 15 ? "medium" : "good";
%>

<tr class="medicine-row">
<form method="POST" action="/doctor/medicine/<%= med._id %>/update">
<td><input name="name" value="<%= med.name %>"></td>
<td><input name="dosesRemaining" type="number" value="<%= med.dosesRemaining %>"></td>
<td><span class="status <%= statusClass %>">
<%= statusClass.toUpperCase() %>
</span></td>
<td><input name="frequency" value="<%= med.frequency %>"></td>
<td><input name="reason" value="<%= med.reason %>"></td>
<td>
<button class="btn btn-update">ðŸ’¾</button>
</form>

<form method="POST"
action="/doctor/medicine/<%= med._id %>/delete"
onsubmit="return confirm('Delete this medicine?')"
style="display:inline;">
<button class="btn btn-delete">ðŸ—‘</button>
</form>
</td>
</tr>

<% }) %>

</table>
</div>

<center>
<button class="btn btn-add" onclick="toggleForm()">âž• Add Medicine</button>
</center>

<div class="add-form" id="addForm">
<h3 style="text-align:center;">Add New Medicine</h3>

<form method="POST">
<div class="form-grid">
<input name="name" placeholder="Medicine Name" required>
<input name="dosesRemaining" type="number" placeholder="Remaining Doses" required>
<input name="frequency" placeholder="Frequency" required>
<input name="reason" placeholder="Reason" required>
</div>
<br>
<center>
<button class="btn btn-add">Save Medicine</button>
</center>
</form>
</div>

</div>
</div>

<script>
function toggleForm(){
document.getElementById("addForm").classList.toggle("active");
}

function filterMedicines(){
let input=document.getElementById("searchInput").value.toLowerCase();
let rows=document.querySelectorAll(".medicine-row");
rows.forEach(row=>{
row.style.display=row.innerText.toLowerCase().includes(input)
?"":"none";
});
}
</script>

</body>
</html>
