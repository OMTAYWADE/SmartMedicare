<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>AI Face Recognition | SmartMedicare</title>

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;500;600;700&display=swap" rel="stylesheet">

<style>

:root{
--primary:#2563eb;
--success:#22c55e;
--danger:#ef4444;
--bg:#020617;
--card:#0f172a;
--text:#f1f5f9;
}

*{
margin:0;
padding:0;
box-sizing:border-box;
font-family:'Inter',sans-serif;
}

body{
background:var(--bg);
display:flex;
justify-content:center;
align-items:center;
min-height:100vh;
color:var(--text);
overflow:hidden;
}

/* Glow background */

body::before,
body::after{
content:"";
position:fixed;
width:500px;
height:500px;
border-radius:50%;
filter:blur(150px);
opacity:.25;
z-index:-1;
animation:float 12s infinite alternate ease-in-out;
}

body::before{
background:#22c55e;
top:-150px;
left:-150px;
}

body::after{
background:#2563eb;
bottom:-150px;
right:-150px;
animation-delay:4s;
}

@keyframes float{
from{transform:translateY(0);}
to{transform:translateY(80px);}
}

/* Container */

.container{
width:95%;
max-width:500px;
background:var(--card);
border-radius:20px;
padding:40px;
text-align:center;
box-shadow:0 25px 70px rgba(0,0,0,.6);
}

/* Video */

.video-box{
position:relative;
width:100%;
aspect-ratio:1/1;
border-radius:20px;
overflow:hidden;
border:2px solid var(--primary);
margin-top:20px;
}

video{
width:100%;
height:100%;
object-fit:cover;
}

/* Face Frame */

.face-frame{
position:absolute;
top:20%;
left:20%;
width:60%;
height:60%;
border:2px solid var(--primary);
border-radius:12px;
box-shadow:0 0 20px var(--primary);
animation:pulse 2s infinite;
}

@keyframes pulse{
0%{box-shadow:0 0 10px var(--primary);}
50%{box-shadow:0 0 30px var(--primary);}
100%{box-shadow:0 0 10px var(--primary);}
}

/* Scan Line */

.scan-line{
position:absolute;
width:100%;
height:3px;
background:var(--primary);
animation:scan 2s linear infinite;
}

@keyframes scan{
0%{top:0;}
100%{top:100%;}
}

button{
margin-top:20px;
padding:12px 25px;
border:none;
border-radius:8px;
background:var(--primary);
color:white;
font-weight:600;
cursor:pointer;
}

button:hover{
opacity:.9;
}

.progress{
margin-top:15px;
font-weight:600;
color:var(--primary);
}

.result{
margin-top:20px;
font-size:18px;
font-weight:700;
color:var(--success);
}

@media(max-width:500px){
.container{
padding:20px;
}
}

</style>
</head>

<body>

<div class="container">

<h2>AI Face Recognition</h2>
<p style="color:#94a3b8;">Align your face within the frame</p>
<form action="/generateReport" method="POST">
  <button class="btn green">Generate Health Report</button>
</form>


<div class="video-box">
<video id="video" autoplay playsinline></video>
<div class="face-frame"></div>
<div class="scan-line"></div>
</div>

<button onclick="startRecognition()">Start Recognition</button>

<div class="progress" id="progressText"></div>
<div class="result" id="resultText"></div>

</div>

<script>

/* Fake Registered Patients */

const patients = [
"Aarav Sharma",
"Priya Verma",
"Rahul Mehta",
"Sneha Patel"
];

let streamRef;

async function startRecognition(){

document.getElementById("resultText").innerText="";

try{
streamRef = await navigator.mediaDevices.getUserMedia({video:true});
document.getElementById("video").srcObject = streamRef;

fakeScan();

}catch{
alert("Camera permission required. Run on localhost.");
}

}

function fakeScan(){

let progress=0;

let interval=setInterval(()=>{
progress+=2;
document.getElementById("progressText").innerText="Analyzing Face... "+progress+"%";

if(progress>=100){
clearInterval(interval);
finishRecognition();
}
},40);

}

function finishRecognition(){

if(streamRef){
streamRef.getTracks().forEach(track=>track.stop());
}

/* Fake AI detection */

let detectedName = patients[Math.floor(Math.random()*patients.length)];

document.getElementById("resultText").innerText="Welcome, "+detectedName+" âœ”";

/* Save user */

localStorage.setItem("smartUser",JSON.stringify({
name:detectedName,
role:"patient"
}));

setTimeout(()=>{
window.location.href="dashboard.html";
},2000);

}

</script>

</body>
</html>
