<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Face Scan Demo</title>
<style>
body {
  margin: 0;
  background: #0f0f1a;
  color: white;
  font-family: Arial, sans-serif;
  text-align: center;
}

.container {
  margin-top: 40px;
}

video {
  width: 300px;
  height: 300px;
  border-radius: 50%;
  object-fit: cover;
  border: 4px solid #6a5acd;
  box-shadow: 0 0 30px #6a5acd;
}

.scan-line {
  position: absolute;
  width: 300px;
  height: 4px;
  background: #00f7ff;
  animation: scan 3s infinite;
}

@keyframes scan {
  0% { top: 0; }
  100% { top: 296px; }
}

.circle-wrapper {
  position: relative;
  display: inline-block;
}

.progress {
  width: 300px;
  height: 8px;
  background: #222;
  margin: 20px auto;
  border-radius: 20px;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  width: 0%;
  background: #6a5acd;
  transition: width 1s linear;
}

.result {
  font-size: 24px;
  margin-top: 20px;
  opacity: 0;
  transition: opacity 1s ease-in-out;
}

.verified {
  color: #00ff88;
}
</style>
</head>
<body>

<div class="container">
  <h2>Face Recognition Scanner</h2>

  <div class="circle-wrapper">
    <video id="video" autoplay muted></video>
    <div class="scan-line"></div>
  </div>

  <div class="progress">
    <div class="progress-bar" id="progressBar"></div>
  </div>

  <div class="result" id="result"></div>
</div>

<script>
const video = document.getElementById('video');
const progressBar = document.getElementById('progressBar');
const result = document.getElementById('result');

