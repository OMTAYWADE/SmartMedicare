<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>AI Biometric Verification | SmartMedicare</title>

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

<style>
:root{
--primary:#2563eb;
--success:#22c55e;
--bg:#020617;
--card:#0f172a;
--text:#f1f5f9;
}

*{
margin:0;
padding:0;
box-sizing:border-box;
font-family:'Inter',sans-serif;
}

body{
background:var(--bg);
color:var(--text);
display:flex;
justify-content:center;
align-items:center;
min-height:100vh;
overflow:hidden;
}

/* Glow background */
body::before,
body::after{
content:"";
position:fixed;
width:600px;
height:600px;
border-radius:50%;
filter:blur(160px);
opacity:.25;
z-index:-1;
animation:float 14s infinite alternate ease-in-out;
}

body::before{
background:#22c55e;
top:-200px;
left:-200px;
}

body::after{
background:#2563eb;
bottom:-200px;
right:-200px;
}

@keyframes float{
from{transform:translateY(0);}
to{transform:translateY(100px);}
}

.container{
width:95%;
max-width:550px;
background:var(--card);
border-radius:24px;
padding:40px;
text-align:center;
box-shadow:0 30px 80px rgba(0,0,0,.7);
position:relative;
}

/* Camera box */

.camera-box{
position:relative;
width:100%;
aspect-ratio:1/1;
border-radius:24px;
overflow:hidden;
border:2px solid var(--primary);
margin-top:25px;
box-shadow:0 0 40px rgba(37,99,235,.5);
}

video{
width:100%;
height:100%;
object-fit:cover;
}

/* Circular biometric overlay */

.circle-overlay{
position:absolute;
top:50%;
left:50%;
transform:translate(-50%,-50%);
width:65%;
height:65%;
border:3px solid var(--primary);
border-radius:50%;
box-shadow:0 0 25px var(--primary);
animation:pulse 2s infinite;
}

@keyframes pulse{
0%{box-shadow:0 0 10px var(--primary);}
50%{box-shadow:0 0 35px var(--primary);}
100%{box-shadow:0 0 10px var(--primary);}
}

/* Scan line */

.scan-line{
position:absolute;
width:100%;
height:3px;
background:linear-gradient(90deg,transparent,var(--primary),transparent);
animation:scan 2s linear infinite;
}

@keyframes scan{
0%{top:0;}
100%{top:100%;}
}

/* Status */

.status{
margin-top:20px;
font-weight:600;
color:var(--primary);
}

.result{
margin-top:10px;
font-size:18px;
font-weight:700;
color:var(--success);
}

button{
margin-top:25px;
padding:12px 30px;
border:none;
border-radius:10px;
background:var(--primary);
color:white;
font-weight:600;
cursor:pointer;
transition:.3s;
}

button:hover{
transform:scale(1.05);
box-shadow:0 0 20px var(--primary);
}

.hidden{
display:none;
}

/* Responsive */

@media(max-width:600px){
.container{
padding:20px;
}
}

</style>
</head>
<body>

<div class="container">

<h2>AI Biometric Face Verification</h2>
<p style="color:#94a3b8;">Secure medical identity confirmation</p>

<div class="camera-box">
<video id="video" autoplay playsinline></video>
<div class="circle-overlay"></div>
<div class="scan-line"></div>
</div>

<button onclick="startScan()">Start Verification</button>

<div class="status" id="statusText"></div>
<div class="result" id="resultText"></div>

<form id="reportForm" action="/generateReport" method="POST" class="hidden">
<button type="submit">Proceed to Health Report</button>
</form>

</div>

<script>

let streamRef;

async function startScan(){

document.getElementById("resultText").innerText="";
document.getElementById("statusText").innerText="";

try{
streamRef = await navigator.mediaDevices.getUserMedia({video:true});
document.getElementById("video").srcObject = streamRef;
simulateScan();
}catch{
alert("Camera permission required.");
}

}

function simulateScan(){

let progress=0;

let interval=setInterval(()=>{
progress+=4;

document.getElementById("statusText").innerText =
"Analyzing facial biometrics... "+progress+"%";

if(progress>=100){
clearInterval(interval);
finishVerification();
}
},80);

}

function finishVerification(){

if(streamRef){
streamRef.getTracks().forEach(track=>track.stop());
}

document.getElementById("statusText").innerText="";
document.getElementById("resultText").innerText="Identity Verified Successfully âœ”";

document.getElementById("reportForm").classList.remove("hidden");

}

</script>

</body>
</html>
