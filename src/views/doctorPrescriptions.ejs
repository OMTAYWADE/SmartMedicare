<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Prescriptions</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

<style>
*{
font-family:'Poppins',sans-serif;
box-sizing:border-box;
margin:0;
padding:0;
}

body{
min-height:100vh;
background:linear-gradient(135deg,#0f2027,#203a43,#2c5364);
color:white;
overflow-x:hidden;
}

/* Floating Glow */
body::after{
content:"";
position:fixed;
width:600px;
height:600px;
background:radial-gradient(circle,#00f2fe55,transparent 70%);
filter:blur(120px);
animation:float 10s ease-in-out infinite alternate;
z-index:-1;
}

@keyframes float{
from{transform:translate(-150px,-150px);}
to{transform:translate(150px,150px);}
}

.container{
max-width:1100px;
margin:auto;
padding:40px 20px;
}

.glass{
background:rgba(255,255,255,0.08);
backdrop-filter:blur(16px);
border-radius:20px;
padding:35px;
box-shadow:0 0 50px rgba(0,255,255,0.2);
animation:fadeIn .8s ease;
}

h2{
text-align:center;
margin-bottom:20px;
}

/* Buttons */
.btn{
border:none;
padding:10px 20px;
border-radius:30px;
cursor:pointer;
font-weight:600;
transition:.3s;
}

.btn-primary{
background:linear-gradient(45deg,#00f2fe,#4facfe);
}

.btn-save{
background:linear-gradient(45deg,#00ffcc,#00cc99);
}

.btn-danger{
background:linear-gradient(45deg,#ff416c,#ff4b2b);
}

.btn:hover{
box-shadow:0 0 25px rgba(0,255,255,0.7);
transform:translateY(-3px);
}

/* Form */
.formBox{
overflow:hidden;
max-height:0;
transition:0.6s ease;
}

.formBox.active{
max-height:900px;
}

.medRow{
display:grid;
grid-template-columns:repeat(4,1fr);
gap:15px;
margin-bottom:12px;
align-items:center;
}

input,textarea{
background:transparent;
border:1px solid rgba(0,255,255,0.4);
border-radius:10px;
padding:10px;
color:white;
width:100%;
}

input:focus,textarea:focus{
outline:none;
box-shadow:0 0 10px cyan;
}

textarea{
resize:none;
min-height:90px;
}

/* Cards */
.card{
background:rgba(255,255,255,0.08);
border-radius:15px;
padding:20px;
margin-top:20px;
box-shadow:0 0 20px rgba(0,255,255,0.15);
animation:slideUp .6s ease;
}

.card ul{
margin-left:15px;
}

@keyframes fadeIn{
from{opacity:0;transform:translateY(20px);}
to{opacity:1;transform:translateY(0);}
}

@keyframes slideUp{
from{opacity:0;transform:translateY(40px);}
to{opacity:1;transform:translateY(0);}
}

/* Scrollable previous section */
.prescription-list{
max-height:400px;
overflow-y:auto;
padding-right:10px;
}

/* Mobile */
@media(max-width:768px){
.medRow{
grid-template-columns:1fr;
}
.glass{
padding:20px;
}
}

</style>
</head>

<body>

<div class="container">
<div class="glass">

<h2>ðŸ“„ Prescriptions for <%= patient.name %></h2>

<center>
<button onclick="toggleForm()" class="btn btn-primary">
âž• New Prescription
</button>
</center>

<br>

<div class="formBox" id="formBox">
<form method="POST">

<div id="medList">
<div class="medRow">
<input type="text" name="medicines[0][name]" placeholder="Medicine Name" required>
<input type="text" name="medicines[0][dosage]" placeholder="Dosage" required>
<input type="text" name="medicines[0][days]" placeholder="Days" required>
<button type="button" onclick="removeRow(this)" class="btn btn-danger">âœ–</button>
</div>
</div>

<center>
<button type="button" onclick="addMedicine()" class="btn btn-primary">
âž• Add Medicine
</button>
</center>

<br>

<textarea name="notes" placeholder="Doctor notes..."></textarea>
<br><br>

<center>
<button class="btn btn-save">ðŸ’¾ Save Prescription</button>
</center>

</form>
</div>

<hr style="border-color:rgba(255,255,255,0.2);margin:30px 0;">

<div class="prescription-list">

<% prescriptions.forEach(p => { %>
<div class="card">
<h4>ðŸ—“ <%= p.date.toDateString() %></h4>
<ul>
<% p.medicines.forEach(m => { %>
<li>ðŸ’Š <%= m.name %> â€” <%= m.dosage %> for <%= m.days %> days</li>
<% }) %>
</ul>
<p><b>Notes:</b> <%= p.notes %></p>
</div>
<% }) %>

</div>

</div>
</div>

<script>
let index = 1;

function toggleForm(){
document.getElementById("formBox").classList.toggle("active");
}

function addMedicine(){
const div=document.createElement("div");
div.className="medRow";
div.innerHTML=`
<input type="text" name="medicines[${index}][name]" placeholder="Medicine Name" required>
<input type="text" name="medicines[${index}][dosage]" placeholder="Dosage" required>
<input type="text" name="medicines[${index}][days]" placeholder="Days" required>
<button type="button" onclick="removeRow(this)" class="btn btn-danger">âœ–</button>
`;
document.getElementById("medList").appendChild(div);
index++;
}

function removeRow(button){
button.parentElement.remove();
}
</script>

</body>
</html>
