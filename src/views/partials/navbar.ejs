/* ===== GLOBAL UI FIX ===== */

html, body {
  height: 100%;
  margin: 0;
}

body {
  font-family: 'Inter', sans-serif;
  background: linear-gradient(
    135deg,
    #eef2f7,
    #f9fbfd
  );
  display: flex;
  flex-direction: column;
}

/* Main page wrapper */
.page-wrapper {
  flex: 1;
  padding: 40px 0;
}

/* Container spacing fix */
.container {
  width: 90%;
  max-width: 1200px;
}
