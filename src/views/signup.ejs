<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Sign Up | SmartMedicare</title>

  <!-- Materialize -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">

  <!-- Font -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">

  <style>
    body {
      margin: 0;
      min-height: 100vh;
      font-family: 'Inter', sans-serif;
      background-size: cover;
      background-position: center;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    body::before {
      content: "";
      position: fixed;
      inset: 0;
      background: rgba(0, 0, 0, 0.55);
      z-index: -1;
    }

    .auth-card {
      backdrop-filter: blur(14px);
      background: rgba(255, 255, 255, 0.15);
      border-radius: 14px;
      box-shadow:
        0 10px 30px rgba(0, 0, 0, 0.25),
        0 2px 6px rgba(0, 0, 0, 0.08);
      animation: slideUp 0.6s ease;
    }

    @keyframes slideUp {
      from {
        opacity: 0;
        transform: translateY(40px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .card-content {
      padding: 30px 28px 10px;
    }

    .card-title {
      font-weight: 600;
      color: #ffffff;
      margin-bottom: 6px;
    }

    .subtitle {
      color: #45eded;
      font-size: 14px;
      margin-bottom: 22px;
    }

    .input-field label {
      color: #97caf4;
    }

    .input-field input:focus + label,
    .input-field select:focus + label {
      color: #3f4eec !important;
    }

    .input-field input:focus {
      border-bottom: 2px solid #1976d2 !important;
      box-shadow: none !important;
    }

    .auth-btn {
      width: 100%;
      margin-top: 18px;
      border-radius: 8px;
      background: #1976d2;
      font-weight: 500;
      letter-spacing: 0.5px;
      box-shadow: 0 6px 16px rgba(25, 118, 210, 0.4);
      transition: all 0.25s ease;
    }

    .auth-btn:hover {
      background: #4815c0;
      box-shadow: 0 10px 24px rgba(25, 118, 210, 0.55);
      transform: translateY(-2px);
    }

    .card-action {
      padding: 15px 28px 25px;
      border-top: none;
    }

    .card-action p {
      margin: 0;
      font-size: 14px;
      color: #cc7ee9;
    }

    .card-action a {
      color: #1976d2;
      font-weight: 500;
    }

    select{
    color: #ee4aac;
    }

    .error-text {
      color: #d32f2f;
      font-size: 14px;
      margin-bottom: 12px;
    }
  </style>
</head>

<body>

<div class="container">
  <div class="row">
    <div class="col s12 m6 offset-m3 l4 offset-l4">

      <!-- SAME CARD AS LOGIN -->
      <div class="card auth-card">
        <div class="card-content">

          <span class="card-title center-align">Create Account</span>
          <p class="subtitle center-align">
            Register for SmartMedicare
          </p>

          <% if (message && message.length) { %>
            <p class="error-text center-align"><%= message %></p>
          <% } %>

          <form method="POST" action="/signup">

            <div class="input-field">
              <input id="name" type="text" name="name" required>
              <label for="name">Full Name</label>
            </div>

            <div class="input-field">
              <input id="email" type="email" name="email" required>
              <label for="email">Email Address</label>
            </div>

            <div class="input-field">
              <input id="password" type="password" name="password" required>
              <label for="password">Password</label>
            </div>

            <div class="input-field">
              <select name="role" id="role" style="color: rgb(241, 73, 241);">
                <option value="" disabled selected>Select Role</option>
                <option value="patient">Patient</option>
                <option value="relative">Relative</option>
                <option value="doctor">Doctor</option>
              </select>
              <label for="role">Account Role</label>
            </div>

            <div class="input-field">
              <input id="patientId" type="text" name="patientId" required>
              <label for="patientId">Patient ID</label>
            </div>

            <button type="submit" class="btn auth-btn">
              Sign Up
            </button>

          </form>

        </div>

        <div class="card-action center-align">
          <p>
            Already have an account?
            <a href="/login">Login</a>
          </p>
        </div>
      </div>

    </div>
  </div>
</div>

<!-- Materialize -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    M.updateTextFields();
    M.FormSelect.init(document.querySelectorAll('select'));

    const backgrounds = [
      "https://m.media-amazon.com/images/I/71mgpWBEXHL.jpg",
      "https://wallpapercave.com/wp/wp1951584.jpg",
      "https://wallpapercave.com/wp/wp14192218.jpg",
      "https://wallpapercave.com/uwp/uwp4960630.jpeg",
      "https://wallpapercave.com/uwp/uwp4960448.jpeg",
      "https://wallpapercave.com/wp/wp11155181.jpg",
      "https://wallpapercave.com/wp/wp6057120.jpg",
      "https://wallpapercave.com/wp/wp5574437.jpg",
      "https://wallpapercave.com/wp/wp16029940.jpg",
      "https://wallpapercave.com/wp/wp13182994.jpg",
      "https://wallpapercave.com/wp/wp14940921.webp",
      "https://wallpapercave.com/wp/wp14981590.webp"
    ];

    document.body.style.backgroundImage =
      `url(${backgrounds[Math.floor(Math.random() * backgrounds.length)]})`;
  });
</script>


</body>
</html>
