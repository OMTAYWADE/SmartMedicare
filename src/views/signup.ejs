<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Sign Up | SmartMedicare</title>

<link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<style>

*{margin:0;padding:0;box-sizing:border-box;}

body{
min-height:100vh;
display:flex;
align-items:center;
justify-content:center;
font-family:'Inter',sans-serif;
background-size:cover;
background-position:center;
overflow:hidden;
}

/* Dark overlay */
body::before{
content:"";
position:fixed;
inset:0;
background:linear-gradient(rgba(0,0,0,.6),rgba(0,0,0,.8));
z-index:-1;
}

/* Floating glow */
body::after{
content:"";
position:absolute;
width:500px;
height:500px;
background:radial-gradient(circle,#1976d280,transparent 70%);
filter:blur(120px);
animation:float 10s ease-in-out infinite alternate;
z-index:-1;
}

@keyframes float{
from{transform:translate(-150px,-150px);}
to{transform:translate(150px,150px);}
}

/* Card */
.auth-card{
backdrop-filter:blur(18px);
background:rgba(255,255,255,.12);
border-radius:18px;
box-shadow:0 30px 60px rgba(0,0,0,.5);
animation:fadeUp .8s ease forwards;
opacity:0;
transform:translateY(40px);
transition:.4s;
}

.auth-card:hover{
transform:translateY(-6px);
}

@keyframes fadeUp{
to{
opacity:1;
transform:translateY(0);
}
}

.card-content{
padding:35px 30px 15px;
}

.card-title{
font-weight:600;
color:#fff;
margin-bottom:5px;
}

.subtitle{
color:#90caf9;
font-size:14px;
margin-bottom:25px;
}

/* Inputs */
.input-field input{
color:#fff;
}

.input-field label{
color:#bbb;
}

.input-field input:focus + label{
color:#42a5f5 !important;
}

.input-field input:focus{
border-bottom:2px solid #42a5f5 !important;
box-shadow:none !important;
}

select{
color:#fff;
}

/* Button */
.auth-btn{
width:100%;
margin-top:20px;
border-radius:30px;
background:linear-gradient(135deg,#42a5f5,#478ed1);
font-weight:500;
letter-spacing:.5px;
transition:.4s;
box-shadow:0 10px 25px rgba(66,165,245,.6);
animation:pulse 3s infinite;
}

.auth-btn:hover{
transform:translateY(-3px);
box-shadow:0 20px 40px rgba(66,165,245,.8);
}

@keyframes pulse{
0%{box-shadow:0 0 0 0 rgba(66,165,245,.6);}
70%{box-shadow:0 0 0 20px rgba(66,165,245,0);}
100%{box-shadow:0 0 0 0 rgba(66,165,245,0);}
}

/* Password toggle */
.toggle-pass{
position:absolute;
right:10px;
top:12px;
cursor:pointer;
color:#90caf9;
}

/* Footer */
.card-action{
border-top:1px solid rgba(255,255,255,.15);
padding:18px;
}

.card-action p{
margin:0;
color:#ddd;
}

.card-action a{
color:#42a5f5;
font-weight:500;
}

.error-text{
color:#ff6b6b;
margin-bottom:12px;
}

/* Responsive */
@media(max-width:600px){
.auth-card{
margin:15px;
}
.card-content{
padding:25px 20px;
}
}

</style>
</head>

<body>

<div class="container">
<div class="row">
<div class="col s12 m6 offset-m3 l4 offset-l4">

<div class="card auth-card">

<div class="card-content">

<span class="card-title center-align">Create Account</span>
<p class="subtitle center-align">Register for SmartMedicare</p>

<% if (message && message.length) { %>
<p class="error-text center-align"><%= message %></p>
<% } %>

<form method="POST" action="/signup">

<div class="input-field">
<input id="name" type="text" name="name" required>
<label for="name">Full Name</label>
</div>

<div class="input-field">
<input id="email" type="email" name="email" required>
<label for="email">Email Address</label>
</div>

<div class="input-field" style="position:relative;">
<input id="password" type="password" name="password" required>
<label for="password">Password</label>
<i class="material-icons toggle-pass" onclick="togglePassword()">visibility</i>
</div>

<div class="input-field">
<select name="role" id="role">
<option value="" disabled selected>Select Role</option>
<option value="patient">Patient</option>
<option value="relative">Relative</option>
<option value="doctor">Doctor</option>
</select>
<label for="role">Account Role</label>
</div>

<div class="input-field">
<input id="patientId" type="text" name="patientId" required>
<label for="patientId">Patient ID</label>
</div>

<button type="submit" class="btn auth-btn">
Sign Up
</button>

</form>

</div>

<div class="card-action center-align">
<p>
Already have an account?
<a href="/login">Login</a>
</p>
</div>

</div>
</div>
</div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

<script>
document.addEventListener('DOMContentLoaded', function () {
M.updateTextFields();
M.FormSelect.init(document.querySelectorAll('select'));

const backgrounds = [
"https://wallpapercave.com/wp/wp6057120.jpg",
"https://wallpapercave.com/wp/wp5574437.jpg",
"https://wallpapercave.com/wp/wp14981590.webp"
];

document.body.style.backgroundImage =
`url(${backgrounds[Math.floor(Math.random()*backgrounds.length)]})`;
});

function togglePassword(){
const pass = document.getElementById("password");
pass.type = pass.type === "password" ? "text" : "password";
}
</script>

</body>
</html>
